{{> header}}

<div class="form-container">
  <h1>Edit Expense</h1>

  <!-- Flash Messages -->
  {{#if success_msg}}
    <p class="flash-message success">{{success_msg}}</p>
  {{/if}}
  {{#if error_msg}}
    <p class="flash-message error">{{error_msg}}</p>
  {{/if}}

  <!-- Edit Expense Form -->
  <form action="/dashboard/edit/{{expense._id}}" method="POST">
    <label for="title">Title</label>
    <input
      type="text"
      id="title"
      name="title"
      value="{{expense.title}}"
      required
    />

    <label for="amount">Amount</label>
    <input
      type="number"
      id="amount"
      name="amount"
      step="0.01"
      value="{{expense.amount}}"
      required
    />

    <label for="category">Category</label>
    <select id="category" name="category" required>
      {{#each categoryOptions}}
      <option value="{{this.name}}" {{this.selected}}>{{this.name}}</option>
      {{/each}}
    </select>

    <label for="date">Date</label>
    <input
      type="date"
      id="date"
      name="date"
      value="{{expense.date}}"
      required
    />

    <button type="submit">Update Expense</button>
  </form>
</div>

{{> footer}}
